{
  "name": "task-manager",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "npm run prisma:generate && concurrently \"npm run start:dev --prefix apps/api\" \"npm run dev --prefix apps/web\" \"npm run dev --prefix apps/worker\"",
    "test:services": "node scripts/test-services.js",
    "prisma:generate": "npx prisma generate --schema=packages/prisma/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=packages/prisma/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=packages/prisma/prisma/schema.prisma",
    "redis:up": "docker run -d -p 6379:6379 --name taskmanager-redis redis:7",
    "redis:down": "docker stop taskmanager-redis && docker rm taskmanager-redis",
    "redis:logs": "docker logs -f taskmanager-redis"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "prisma": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bullmq": "^5.0.0",
    "ioredis": "^5.3.2"
  }
}
